<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_res_partner_custom_pricelist_form" model="ir.ui.view">
            <field name="name">Price custom for partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@string='Contacts']" position="after">
                    <page string="Custom product" attrs="{'invisible': [('is_company','=',False)]}">
                        <field name="pricelist_product_ids" colspan="4" nolabel="1">
                            <tree editable="bottom" colspan="4">
                                <field name="product_id" />
                                <field name="alias_id" />
                                <field name="package_id" />
                                <field name="load_qty" />
                                <field name="price" />                                  
                                <field name="date" />                                  
                                <field name="note" />                                    
                            </tree>
                            <form version="7.0">
                              <sheet>
                                 <group colspan="4" col="4">
                                    <field name="product_id" />
                                    <field name="alias_id" />
                                    <field name="package_id" />
                                    <field name="load_qty" />
                                    <field name="price" />                                  
                                    <field name="date" />                                  
                                    <field name="note" />                                    
                                 </group>
                              </sheet>      
                            </form>
                        </field>
                    </page>                    
                </xpath>
            </field>
        </record>
        
       <record model="ir.ui.view" id="view_sale_order_line_default">
            <field name="name">sale.order.line.default</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <!--sale.order.line-->
                <xpath expr="/form/sheet/notebook/page//field[@name='order_line']/form//field[@name='product_packaging']" position="before">
                    <field name="product_ul"/>
                </xpath>                
                <xpath expr="/form/sheet/notebook/page//field[@name='order_line']/form//field[@name='product_packaging']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
       </record>         

    </data>
</openerp>
