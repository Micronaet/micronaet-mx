<?xml version="1.0"?>
<openerp>
    <data>
        <!--sale.order.docs-->
        <record model="ir.ui.view" id="view_sale_order_docs_form">
            <field name="name">Order docs</field>
            <field name="model">sale.order.docs</field>
            <field name="arch" type="xml">
                <form string="Order docs" version="7.0">        
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" colspan="4"/>
                            <field name="sequence" />
                            <field name="mandatory" />
                            <separator string="Note" colspan="4" />
                            <field name="note" colspan="4"/>
                        </group>
                    </sheet>        
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_sale_order_docs_tree">
            <field name="name">Order docs</field>
            <field name="model">sale.order.docs</field>
            <field name="arch" type="xml">
                <tree string="Order docs">        
                    <field name="name" />
                    <field name="sequence" />
                    <field name="mandatory" />
                    <field name="note" />
                </tree>
            </field>
        </record>

        <!--INHERIT sale.order-->
        <record model="ir.ui.view" id="view_sale_order_docs_form">
            <field name="name">Order extra docs</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">                
                <xpath expr="/form/sheet/notebook/page" position="after">
                    <page string="Extra docs">
                        <group colspan="4" col="4">    
                            <button name="load_from_list" string="Load from list" type="object" />                       
                            <button name="load_from_partner" string="Load from partner" type="object" />    
                            <field name="order_docs_ids" colspan="4" nolabel="1">
                                <tree editable="bottom" colspan="4" >
                                    <field name="sequence" />
                                    <field name="mandatory" />
                                    <field name="docs_id" />
                                    <field name="note" />
                                </tree>
                                <form version="7.0">
                                  <sheet>
                                     <group colspan="4" col="4">
                                        <field name="sequence" />
                                        <field name="mandatory" />
                                        <field name="docs_id" />
                                        <field name="note" />
                                     </group>
                                  </sheet>      
                                </form>  
                            </field>                                 
                        </group>     
                    </page>
                </xpath>                
            </field>
       </record>         

        <!--INHERIT res.partner-->
        <record id="view_res_partner_order_dosc_parter_form" model="ir.ui.view">
            <field name="name">Partner extra docs</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@string='Contacts']" position="after">
                    <page string="Order docs" attrs="{'invisible': [('is_company','=',False)]}">
                        <button name="load_from_list" string="Load from list" type="object" />                       
                        <field name="order_docs_ids" colspan="4" nolabel="1">
                            <tree editable="bottom" colspan="4" >
                                <field name="sequence" />
                                <field name="mandatory" />
                                <field name="docs_id" />
                                <field name="note" />
                            </tree>
                            <form version="7.0">
                              <sheet>
                                 <group colspan="4" col="4">
                                    <field name="sequence" />
                                    <field name="mandatory" />
                                    <field name="docs_id" />
                                    <field name="note" />
                                 </group>
                              </sheet>      
                            </form>
                        </field>
                    </page>                    
                </xpath>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_sale_oder_docs_form">
            <field name="name">Sale order docs</field>
            <field name="res_model">sale.order.docs</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sale_order_docs_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        <menuitem 
            parent="base.menu_base_config" 
            id="menu_sale_oder_docs_form" 
            action="action_sale_oder_docs_form"
            sequence="50"            
            />
        
    </data>
</openerp>

