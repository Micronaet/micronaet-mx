<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_sale_order_pickout_form">
            <field name="name">sale.order.pick.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="picking_ids" readonly="1" attrs="{'invisible': [('state','not in',('confirmed','done'))]}">
                        <tree string="Pick out" > <!--colors="black:ddt_number!=False"-->
                            <field name="date" />
                            <field name="name" />
                            <field name="state" invisible="1"/>
                            <!--<field name="ddt_number" />-->
                        </tree>
                    </field>
                </field>
                <xpath expr="/form/sheet/notebook/page//field[@name='order_line']/tree/field[@name='discount']" position="after">
                    <field name="delivered_qty" />
                </xpath>                
            </field>
        </record>

        <record id="view_order_line_mx" model="ir.ui.view">
            <field name="name">sale.order.line.mx</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_form2"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                     <field name="alias_id" />
                </field>

                <field name="discount" position="after">
                     <field name="date_deadline" />
                     <!--<field name="date_delivery" readonly="1" />-->
                </field>
                
            </field>
        </record>    
        
    </data>
</openerp>
